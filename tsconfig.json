{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "lib"
  },
  "include": [
    "./scripts",
    "./utils",
    "./utils/**/*.json",
    "./contracts",
    "./hardhat.config.ts",
    "index.ts"
  ],
}
